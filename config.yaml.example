# IFC Graph Database Configuration
# This file configures which IFC element types to extract and how to process them

# IFC Element Types to Extract
# Add or remove element types as needed without modifying the code
element_types:
  # Structural Elements
  - IfcWall
  - IfcWallStandardCase
  - IfcColumn
  - IfcBeam
  - IfcSlab
  - IfcRoof
  - IfcFooting
  - IfcPile
  
  # Openings and Doors/Windows
  - IfcDoor
  - IfcWindow
  - IfcOpeningElement
  
  # Circulation
  - IfcStair
  - IfcStairFlight
  - IfcRamp
  - IfcRampFlight
  
  # MEP Elements (optional - uncomment to include)
  # - IfcFlowTerminal
  # - IfcFlowSegment
  # - IfcFlowFitting

# Extraction Settings
extraction:
  # Include property sets in the graph
  include_property_sets: true
  
  # Include material information
  include_materials: true
  
  # Include geometric information (bounding box)
  include_geometry: true
  
  # Maximum properties per element (to prevent bloat)
  max_properties_per_element: 50

# Spatial Structure Settings
spatial:
  # Create full spatial hierarchy (Site -> Building -> Storey -> Space)
  create_spatial_hierarchy: true
  
  # Include space boundaries
  include_space_boundaries: false

# Logging Configuration
logging:
  level: INFO  # DEBUG, INFO, WARNING, ERROR
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
